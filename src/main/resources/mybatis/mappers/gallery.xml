<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gallery">
	
	<insert id="insert" parameterType="com.javaex.vo.GalleryVo">
		<![CDATA[
			insert into gallery
			values (seq_gallery_no.nextval, #{userNo}, '',  #{filePath}, #{orgName}, #{saveName}, #{fileSize})
		
		]]>
	
	</insert>
	
	<select id="selectList" resultType="com.javaex.vo.GalleryVo">
		<![CDATA[
			select  g.saveName,
       				u.name userName
			from gallery g, users u
			where g.user_no = u.no
		]]>
	
	</select>
	
	
</mapper>
